{
  "layer": "top",
  "position": "top",

  "margin-top": 12,
  "margin-left": 12,
  "margin-right": 12,

  "modules-left": [
    "hyprland/workspaces",
    "hyprland/window"
  ],

  "modules-center": [
    "clock"
  ],

"modules-right": [
  "cpu",
  "temperature",
  "memory",
  "pulseaudio",
  "network"
],

"hyprland/workspaces": {
  "format": "{icon}",
  "on-click": "activate",
  "all-outputs": false,
  "persistent-workspaces": {
    "DP-1": [1, 2, 3],
    "DP-2": [4, 5, 6],
    "HDMI-A-2": [7, 8, 9]
  }
},

  "hyprland/window": {
    "format": "{title}",
    "max-length": 40,
    "separate-outputs": true
  },

  "clock": {
    "format": "{:%H:%M}"
  },

"pulseaudio": {
  "format": "󰕾 {volume}%",
  "format-muted": "󰖁 muted",
  "format-icons": {
    "default": ["󰕿", "󰖀", "󰕾"]
  },
  "scroll-step": 5
},

"cpu": {
  "format": " {usage}%",
  "tooltip": false
},

"memory": {
  "format": "󰘚 {used:0.1f}G",
  "tooltip": false
},


"network": {
  "format-wifi": "󰤨 {signalStrength}%",
  "format-ethernet": "󰈀 eth",
  "format-disconnected": "󰤭 down",
  "tooltip": false
},

"temperature": {
  "format": " {temperatureC}°",
  "tooltip": false
}
}
